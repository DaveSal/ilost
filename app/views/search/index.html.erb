<div class="container">
  <div class="row">
    <div class="search col-md-offset-4 col-md-4">
      <% if !params[:q] %>
        <h3>Введите ключевое слово</h3>
      <% end %>
      <%= form_tag search_path, method: 'get' do %>
        <div class="input-group">
          <input type="text" name="q" value="<%= params[:q] %>">
          <span class="input-group-btn">
            <button class="btn btn-default" type="button">Искать</button>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% if @articles.any? %>
  <h3 class="page-title">Все объявления по ключевому слову "<%= params[:q] %>"</h3>

  <%= render 'partials/thumbnail' %>
<% elsif params[:q].present? && !@articles.any? %>
  <h3 class="page-title">По ключевому слову "<%= params[:q] %>" ничего не найдено</h3>
<% end %>
