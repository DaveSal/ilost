<article class='article-thumbnail'>
  <div class="row">
  <% @articles.each do |article| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= image_tag article.image.url(:thumb) %>
        <div class="caption">
          <h3><%= article.title %></h3>
          <p><em><strong><%= article.subcategory.title %></strong></em></p>
          <p><a href="<%= article_path(article.id) %>" class="btn btn-default" role="button">Подробнее</a></p>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</article>

