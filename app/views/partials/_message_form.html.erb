<%= form_for @message, html: {class: 'form-horizontal form-width article-comment'} do |f| %>
    <div class="form-group <%= 'has-error' if @message.errors[:title].any? %>">
      <%= f.label 'Тема', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :title, class: 'form-control' %>
        <%= render 'partials/field_errors', object: @message, field_name: :title %>
      </div>
    </div>

    <div class="form-group <%= 'has-error' if @message.errors[:content].any? %>">
      <%= f.label 'Описание', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :content, class: 'form-control' %>
        <%= render 'partials/field_errors', object: @message, field_name: :content %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Отправить', class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>
