<div class="container col-md-12">
  <h2 style="text-align: center;">Регистрация</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field col-md-offset-5" style="margin-bottom: 35px;">
      <%= f.label 'Имя' %><br />
      <%= f.text_field :name, autofocus: true, class: "col-md-4" %>
    </div>

    <div class="field col-md-offset-5" style="margin-bottom: 35px;">
      <%= f.label 'Почта' %><br />
      <%= f.email_field :email, class: "col-md-4" %>
    </div>

    <div class="field col-md-offset-5" style="margin-bottom: 35px;">
      <%= f.label 'Пароль' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" , class: "col-md-4"%>
    </div>

    <div class="field col-md-offset-5" style="margin-bottom: 35px;">
      <%= f.label 'Подтверждение пароля' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" , class: "col-md-4"%>
    </div>

    <div class="actions col-md-offset-5 " style="margin-bottom: 35px;">

      <%= f.submit "Регистрация" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
